{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "Build a Storefront backend for the Udacity Fullstack javascript nanodegree. I used the base template provided by Udacity and made a few modifications.",
  "main": "index.ts",
  "scripts": {
    "start": "tsc && node ./dist/index.js",
    "start:dev": "tsc-watch --esModuleInterop src/index.ts --outDir ./dist --onSuccess \"node ./dist/index.js\"",
    "test": "ENV=test && db-migrate --env test reset && db-migrate --env test up && jasmine-ts && db-migrate --env test reset",
    "tsc": "tsc",
    "prettier": "prettier --config .prettierrc.json 'src/**/*.ts' --write"
  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.6.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^7.14.7",
    "@types/prettier": "^2.6.0",
    "@types/supertest": "^2.0.12",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^6.0.0",
    "jasmine-ts": "^0.3.0",
    "prettier": "^2.6.2",
    "supertest": "^6.2.2",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
